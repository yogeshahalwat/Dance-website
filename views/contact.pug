extends base.pug

block scripts 
    scrip(src="/static/index.js")

block style  
    style
        include ../static/style.css
        include ../static/contact.css
block content 
    h1 Contact Us
    form(action="/contact",method="post" class="myform" )
        input(type="text" class="myinput" name="name" placeholder="Enter your name")
        input(type="phone" class="myinput" name="phone"  placeholder="Enter your contact No")
        input(type="email" class="myinput" name="Email"   placeholder="Enter your email")
        textarea(name="address", cols="30", rows="5", placeholder="enter your address" ) 
        button(class="btn")
            |Submit
            